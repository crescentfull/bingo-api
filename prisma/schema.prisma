generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider      = "postgresql"
  url           = env("DATABASE_URL")
}

model BingoBoard {
  id           String   @id @default(uuid())
  userId       String
  scopeType    String   // "daily" | "weekly" | "monthly"
  scopeKey     String
  checkedMask  BigInt   @default(0)
  lineMask     BigInt   @default(0)
  score        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@unique([userId, scopeType, scopeKey], name: "uq_user_scope")
}

model IdempotencyKey {
  id        String   @id @default(uuid())
  userId    String
  key       String
  scopeType String
  scopeKey  String
  added     Int      @default(0)
  createdAt DateTime @default(now())
  @@unique([userId, key], name: "uq_user_id_key")
}

model MissionRecord {
  id          Int   @id @default(autoincrement())
  day         Int
  mission     Int
  score       Int
  createdAt   DateTime @default(now())
}